package  {	import flash.display.MovieClip;	import flash.display.StageAlign;	import flash.display.StageScaleMode;	[ SWF( backgroundColor='0xFFFFFF', frameRate='30', width='1024', height='768' ) ]	public class Main extends MovieClip	{		public static const WIDTH	: int = 1024;		public static const HEIGHT	: int = 768;		public var box_0		: Box;		public var box_1_0		: Box;		public var box_1_0_0	: Box;		public var box_1_0_1	: Box;		public var box_1_1		: Box;		public var box_1_1_0	: Box;		public var box_1_1_1	: Box;		public function Main()		{			stage.align		= StageAlign.TOP_LEFT;			stage.scaleMode	= StageScaleMode.NO_SCALE;			var w	: int;		// width.			var h 	: int;		// height.			var r	: Number;	// ratio.			var pb	: Box;		// parent box.			box_0		= new Box( w = 500, h = 500 );			box_0.x		= WIDTH  * 0.5;			box_0.y		= HEIGHT * 0.5;			stage.addChild( box_0 );			box_0.mouseEnabled	= true;			box_0.mouseChildren	= true;			//-- two stems.			r	= 0.35;			w	= box_0.boxW * 0.5;			h	= box_0.boxH * 0.5;			pb	= box_0;			box_1_0		= new Box( w, h );			box_1_0.x	= pb.boxW * r;			box_1_0.y	= pb.boxH * r * -1;			pb.addChild( box_1_0 );			box_1_0.mouseEnabled	= false;			box_1_0.mouseChildren	= true;			box_1_1		= new Box( w, h );			box_1_1.x	= pb.boxW * r;			box_1_1.y	= pb.boxH * r;			pb.addChild( box_1_1 );			box_1_1.mouseEnabled	= true;			box_1_1.mouseChildren	= false;			//-- top branch.			r 	= 0.35;			w 	= box_1_0.boxW * 0.5;			h 	= box_1_0.boxH * 0.5;			pb	= box_1_0;			box_1_0_0		= new Box( w, h );			box_1_0_0.x		= pb.boxW * r;			box_1_0_0.y		= pb.boxH * r * -1;			pb.addChild( box_1_0_0 );			box_1_0_0.mouseEnabled	= true;			box_1_0_1		= new Box( w, h );			box_1_0_1.x		= pb.boxW * r;			box_1_0_1.y		= pb.boxH * r;			pb.addChild( box_1_0_1 );			box_1_0_1.mouseEnabled = false;			//-- bottom branch.			r	= 0.35;			w	= box_1_1.boxW * 0.5;			h	= box_1_1.boxH * 0.5;			pb	= box_1_1;			box_1_1_0		= new Box( w, h );			box_1_1_0.x		= pb.boxW * r;			box_1_1_0.y		= pb.boxH * r * -1;			pb.addChild( box_1_1_0 );			box_1_1_0.mouseEnabled = false;			box_1_1_1		= new Box( w, h );			box_1_1_1.x		= pb.boxW * r;			box_1_1_1.y		= pb.boxH * r;			pb.addChild( box_1_1_1 );			box_1_1_1.mouseChildren	= true;			box_1_1_1.mouseEnabled	= true;		}		private function addRandomBoxes ( numOfBoxes : int = 1 ):void		{			var box : Box;			for( var i:int=0; i<numOfBoxes; i++ )			{				var bw : int;				var bh : int;				bw = Math.random() * 100 + 100;				bh = Math.random() * 100 + 100;				box	= new Box( bw, bh );				box.name = "box_" + i;				box.mouseEnabled = true;				box.x = Math.random() * stage.stageWidth;				box.y = Math.random() * stage.stageHeight;				box.rotation = Math.random() * 360;				stage.addChild( box );			}		}	}}